<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VirtualDarts2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">#6A0F0F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorAccent">#272926</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Button.Orange" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="Button.Blue" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#39B7EF</item>
    </style>

    <style name="Button.Pink" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#EC6AB8</item>
    </style>

    <style name="Button.Green" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#8BC34A</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Text.Color" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#272926</item>
    </style>

    <style name="Theme.VirtualDarts2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VirtualDarts2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VirtualDarts2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>