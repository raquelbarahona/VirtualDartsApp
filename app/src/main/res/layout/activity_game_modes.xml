<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameModesActivity">
    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/dbicon"
        android:backgroundTint="#981616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:background="@drawable/home"
        android:backgroundTint="#a74b4b"
        android:textColor="@android:color/black"
        android:id="@+id/btnHomeModes"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.306" />

    <TextView
        android:id="@+id/page_title"
        android:layout_width="366dp"
        android:layout_height="113dp"
        android:fontFamily="@font/press_start_2p"
        android:gravity="center"
        android:hint="Page title"
        android:minHeight="48dp"
        android:text="@string/login_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051" />

    <TextView
        android:fontFamily="@font/rubik_light"
        android:textStyle="bold"
        android:id="@+id/tvGameModes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:paddingBottom="30dp"
        android:text="Game modes and instructions"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/page_title" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="382dp"
        android:layout_height="480dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintTop_toBottomOf="@+id/tvGameModes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/press_start_2p"
                android:textSize="25sp"
                android:textColor="#20ba23"
                android:id="@+id/tvMode301"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="301"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:fontFamily="@font/rubik_light"
                android:id="@+id/tvMode301Players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Players"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:fontFamily="@font/rubik_light"
                android:id="@+id/tvMode301Nums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numbers in play"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:fontFamily="@font/rubik_light"
                android:id="@+id/tvMode301Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="301"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:id="@+id/tvMode501"
                android:fontFamily="@font/press_start_2p"
                android:textSize="25sp"
                android:textColor="#20ba23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="501"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:fontFamily="@font/rubik_light"
                android:id="@+id/tvMode501Players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Players"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:fontFamily="@font/rubik_light"
                android:id="@+id/tvMode501Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="501"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>


            <TextView
                android:fontFamily="@font/press_start_2p"
                android:textSize="24sp"
                android:textColor="#20ba23"
                android:id="@+id/tvModeCU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Count Up"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:fontFamily="@font/rubik_light"
                android:id="@+id/tvModeCUPlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Players"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:fontFamily="@font/rubik_light"
                android:id="@+id/tvModeCUNums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Numbers in play"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>

            <TextView
                android:fontFamily="@font/rubik_light"
                android:id="@+id/tvModeCUText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cout Up"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="3dp"/>


            <TextView
                android:fontFamily="@font/rubik_light"
                android:id="@+id/tvLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/linkydinky"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp" />





        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>